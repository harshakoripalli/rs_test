<p id="notice"><%= notice %></p>

<h1>Listing Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type of pet</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Weight</th>
	  <th>Date of Last Visit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.type_of_pet %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.age %></td>
        <td><%= pet.weight %></td>
        <td><% pet.appointments.each do |appointment| %>
		    <% if appointment.date_of_visit < Date.today then%>
			<%= appointment.date_of_visit %>
			<% else %>
			<%= "No previous visit" %>
			<% end %>
			<% end %>
		    </td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

