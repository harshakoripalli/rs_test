<p id="notice"><%= notice %></p>

<h1>Listing Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Date of visit</th>
      <th>Reminder of appointment</th>
      <th>Reason of visit</th>
      <th>Date of next visit</th>
      <th>Doctor</th>
	  <th>Pet</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.date_of_visit %></td>
        <td><%= appointment.reminder_of_appointment %></td>
        <td><%= appointment.reason_of_visit %></td>
        <td><%= appointment.date_of_next_visit %></td>
        <td><%= appointment.doctor.name %></td>
        <td><%= appointment.pet.type_of_pet %></td>
		<td><%= appointment.pet.customer.name%> </td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

